<div class="message">
 <%= flash[:notice] %>
</div>

<h1>Books</h1>
 <table>
    <thead>
      <tr>
       <th class="title">Title</th>
       <th class="body">Body</th>
       <th class="menu",colespan="3"></th>
      </tr>
    </thead>
    <% @book.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show",book_path(book.id) %>
           <%= link_to "Edit",edit_list_path(book.id) %>
           <%= link_to "Destroy",destroy_list_path(book.id),method: :delete,"data-confirm" => "本当に削除しますか？" %></td>
       </tr>
    </tbody>
    <% end %>
  </table>

<h2>New book</h2>
  <% if @new.errors.any? %>
    <%= @new.errors.count %>errors prohidited this book from being saved:
 <ul>
   <% @new.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
  <% end %>

  <%= form_with model:@new do |f| %>
  <div class="text">Title</div>
  <div class="text"><%= f.text_field:title %></div>
  <div class="text">Body</div>
  <div class="text"><%= f.text_area:body %></div>
  
  <div class="text"><%= f.submit'Create Book' %></div>
  
<% end %>

