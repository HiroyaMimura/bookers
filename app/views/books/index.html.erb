<div class="message">
 <%= flash[:notice] %>
</div>

<h1>Books</h1>
 <table>
    <thead>
      <tr>
       <th>Title</th>
       <th>Body</th>
       <th colespan="3"></th>
      </tr>
    </thead>
    
    <tbody>
          <% @book.each do |book| %>
          <tr>
          <td><%= book.title %></td>
          <% end %>
          <% @book.each do |book| %>
          <td><%= book.body %></td>
          <td><%= link_to "Show",book_path(book.id) %></td>
          <td><%= link_to "Edit",edit_list_path(book.id) %></td>
          <td><%= link_to "Destroy",destroy_list_path(book.id),method: :delete,"data-confirm" => "本当に削除しますか？" %></td>
          </tr>
          <% end %>
    </tbody>
  </table>

<h2>New book</h2>
  <% if @new.errors.any? %>
    <%= @new.errors.count %>errors prohidited this book from being saved:
 <ul>
   <% @new.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
  <% end %>

  <%= form_with model:@new do |f| %>
<div>Title</div>
  <%= f.text_field:title %>
<div>Body</div>
  <%= f.text_area:body %>
  
  <%= f.submit'Create Book' %>
  
<% end %>

