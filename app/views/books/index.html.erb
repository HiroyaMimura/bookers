<h1>Books</h1>
<main>
 <div class="list-box1">
   <h3 class="column">Title</h3>
     <ul><% @book.each do |book| %>
       <li class="list"><%= book.title %></li>
        <% end %>
     </ul>
 </div>
    
    
    
  <div class="list-box2">
    <h3 class="column">Body</h3>
     
     <% @book.each do |book| %>
       <div class="list2">
        <span class="body">
            <%= book.body %>
        </span>
         <span class="menu">
           <%= link_to "Show","/show" %>
           <%= link_to "Edit","/edit" %>
           <%= link_to "Destroy","/destroy" %>
         </span>
       </div>
     <% end %>
  </div>
</main>

<h2>New book</h2>
  <%= form_with model:Book.new do |f| %>
<div>Title</div>
  <%= f.text_field:title %>
<div>Body</div>
  <%= f.text_area:body %>
  
  <%= f.submit'Create Book' %>
  
<% end %>
